{
  "name": "intercessio",
  "version": "0.2.0",
  "description": "Intercessio - a minimal Nostr signer CLI built on applesauce.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "intercessio": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --target=bun --outfile ./dist/index.js",
    "clean": "rm -rf dist",
    "dev": "bun run ./src/index.ts",
    "server": "bun run ./src/server.ts",
    "webui": "bun run ./src/web/server.ts",
    "start": "bun run scripts/start.ts",
    "client": "bun run scripts/start.ts",
    "stop": "bun run scripts/stop.ts",
    "setup": "bun run scripts/setup.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "nostr",
    "signer",
    "applesauce",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "applesauce-core": "file:../applesauce/packages/core",
    "applesauce-relay": "file:../applesauce/packages/relay",
    "applesauce-signers": "file:../applesauce/packages/signers",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "nanoid": "^5.1.6",
    "nostr-tools": "^2.17.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "bun-types": "^1.1.34",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
